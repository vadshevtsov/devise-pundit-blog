<%= form_with(model: [ @article, @article.comments.build ], local: true) do |f| %>
  <div class="field">
    <%= f.label :commenter %>
    <%= f.text_field :commenter %>
  </div>
 
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>